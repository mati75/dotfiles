# conky configuration

##############################################
#  Settings
##############################################
out_to_x no
background no
out_to_console yes
#out_to_ncurses yes
update_interval 1
total_run_times 0
use_spacer none
#no_buffers yes
#cpu_average_samples 1
#net_average_samples 1
TEXT
 ${time %a %H:%M:%S}  ---  Kernel - $kernel  *  Uptime - ${uptime_short}  *  Proc - ${if_match ${cpu cpu0} < 10}0.0${cpu}${else}${if_match ${cpu cpu0} < 99}0.${cpu}${else}${if_match ${cpu cpu0} => 100}CRAP${endif}${endif}${endif}  *  Mem - ${if_match ${memperc} < 10}0.0${memperc}${else}${if_match ${memperc} < 99}0.${memperc}${else}${if_match ${memperc} => 100}1.00${endif}${endif}${endif}  *  Bat - ${if_match ${battery_percent BAT0} < 2}O FUCK!!!${else}${if_match ${battery_percent BAT0} < 10}0.0${battery_percent BAT0}${else}${if_match ${battery_percent BAT0} < 99}0.${battery_percent BAT0}${else}${if_match ${battery_percent BAT0} >= 100}Full${endif}${endif}${endif}${endif}  *  Disk - ${if_match ${fs_used_perc /} < 10}0.0${fs_used_perc /}${else}${if_match ${fs_used_perc /} < 99}0.${fs_used_perc /}${else}${if_match ${fs_used_perc /} => 100}1.00${endif}${endif}${endif}  *  Net -${if_existing /proc/net/route wlan0}-  Signal -  0.${wireless_link_qual wlan0} * TX - ${upspeedf wlan0}  *  RX - ${downspeedf wlan0}${else}${if_existing /proc/net/route eth0} TX - ${upspeedf eth0}  *  RX - ${downspeedf eth0}${endif}${if_existing /proc/net/route ppp0}- TX - ${upspeedf ppp0}  *  RX - ${downspeedf ppp0}${endif}${else}Network Unavailable${endif}

